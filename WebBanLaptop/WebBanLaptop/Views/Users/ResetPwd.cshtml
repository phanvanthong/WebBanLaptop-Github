@using WebBanLaptop.Models;
@{
    ViewBag.Title = "ResetPwd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row" style="margin-left:200px">


        <div class="col-sm-9" id="content">
            @*<p>If you already have an account with us, please login at the <a href="login.html">login page</a>.</p>*@
            <form class="form-horizontal" enctype="multipart/form-data" method="post" action="ResetPwd" name="FormDky" onsubmit="return pwdconfirm()">
                <fieldset id="account">
                    <legend>Nhập mật khẩu mới của bạn</legend>

                    <div class="form-group required">
                        <label for="input-firstname" class="col-sm-2 control-label">Tên đăng nhập</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="input-firstname" placeholder="Tên đăng nhập" value="@Model.username" name="username" readonly required>
                        </div>
                    </div>

                    <div class="form-group required">
                        <label for="input-password" class="col-sm-2 control-label">Mật khẩu mới</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="input-password" placeholder="Mật khẩu" value="" name="pwdnew" required>
                        </div>
                    </div>
                    <div class="form-group required">
                        <label for="input-password" class="col-sm-2 control-label">Xác nhận mật khẩu</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="input-password" placeholder="Xác nhận mật khẩu" value="" name="pwdconfirm" required>
                        </div>
                    </div>

                </fieldset>
                <p style="color:red">@ViewBag.resetpwd</p>
                <div class="buttons">
                    <div class="pull-right">
                        <input type="submit" class="btn btn-primary" value="Cập nhật">



                    </div>
                </div>
            </form>
            @*<input type="submit" class="btn btn-primary" value="Tạo" disabled>*@
            <script>
                function KtraAgree() {
                    var Agree = document.getElementById('agree');
                    if (Agree.checked == true) return true;

                    else return false;
                }
                function pwdconfirm() {
                    var pwd = document.forms["FormDky", "pwd"].value;
                    var pwdconfirm = document.forms["FormDky", "pwdconfirm"].value;

                    if (pwd != pwdconfirm) {
                        document.getElementById('pwdconfirm1').innerHTML = "Xác nhận lại mật khẩu!";
                        return false
                    }
                    return true;
                }
            </script>
        </div>

    </div>

</div>
