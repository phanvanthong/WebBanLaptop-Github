@using PagedList.Mvc;
@using PagedList;
@model PagedList.PagedList<WebBanLaptop.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<p>
    @Html.ActionLink("Thêm mới laptop", "ThemMoiLaptop")
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            @*@Html.DisplayNameFor(model => model.First().Products_id)*@
            ID
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.First().Name)*@
            Tên sản phẩm
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.First().HangCPU)*@
            Hãng CPU
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.First().CNCPU)*@
            Công nghệ CPU
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.First().TocDoMax)*@
            Tốc độ max
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.First().MemoryRam)*@
            Ram
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.First().LoaiRam)*@
            Loại Ram
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.First().BusRam)*@
            Bus ram
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.First().KheRam)*@
            Khe ram
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.First().ODia)*@
            Ổ đĩa
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.First().DungLuongODia)*@
            Dung lượng ổ đĩa
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.First().CardDohoa)*@
            Card đồ họa
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.First().ManhHinh)*@
            Màn hình
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.First().Dophangiai)*@
            Độ phân giải
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.First().Gia)*@
            Giá
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.First().Soluong)*@
            Số lượng
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.First().Discount_id)*@
            ID_Khuyên mại
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.First().Hangsx_id)*@
            ID_hãngsx
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("Chỉnh Sửa", "ChinhSuaLaptop", new { @id = item.Products_id }) |
                @Html.ActionLink("Hiển Thị", "HienThiLaptop", new { @id = item.Products_id }) |
                @Html.ActionLink("Xóa", "XoaLaptop", new { @id = item.Products_id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Products_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HangCPU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CNCPU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TocDoMax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemoryRam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiRam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusRam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KheRam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ODia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DungLuongODia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardDohoa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManhHinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dophangiai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soluong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hangsx_id)
            </td>

        </tr>
    }

</table>

@*Tạo link liên kết các trang*@
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
<div class="Menutrang">
    @Html.PagedListPager(Model, page => Url.Action("ListLaptop", new { @page = page }))
</div>
<style>
    .Menutrang li {
        padding-left: 8px;
        display: inline;
    }
</style>