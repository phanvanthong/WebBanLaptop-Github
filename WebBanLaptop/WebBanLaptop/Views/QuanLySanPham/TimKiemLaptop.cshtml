@using PagedList.Mvc;
@using PagedList;
@using WebBanLaptop.Models;
@model PagedList.PagedList<WebBanLaptop.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    Web_ban_laptopEntities db = new Web_ban_laptopEntities();
}

<a href="@Url.Action("ThemMoiLaptop", "QuanLySanPham")"><input type="button" name="themmoi" value="Thêm mới laptop" class="btn btn-default" /></a>

<div class="body" style="width:800px;padding-bottom:15px;margin-top:20px">
    <form id="navbar-search" class="navbar-form search-form"  action="TimKiemLaptop">
        <div class="input-group mb-0">
            <input type="text" class="form-control" value="@ViewBag.TuKhoaLaptop" name="TuKhoaLaptop" placeholder="Tìm kiếm...">
            <div class="input-group-append">
                @*<span class="input-group-text"><i class="icon-magnifier"></i></span>*@
                <button type="submit" style="background-color: transparent;border-color: transparent;margin-left: -7px;margin-top: -4px;"><span style="height:36px" class="input-group-text"><i class="icon-magnifier"></i></span></button>
            </div>
        </div>
        @*</form>
            </div>
            <form action="DieuKienlaptop">*@
        <div style="width:680px;margin-top:20px">
            @{
                List<Hangsx> lsthangsx = db.Hangsxes.OrderBy(n => n.Hangsx_id).ToList();
            }
            <label>Hãng sản xuất: </label>
            <select name="hangsx">
                <option value="">--chọn--</option>
                @foreach (var item in lsthangsx)
                {
                    if (item.Hangsx_id.ToString() == ViewBag.hangsx)
                    {
                        <option value="@item.Hangsx_id" selected>@item.tenhang</option>}
                    else
                    {
                        <option value="@item.Hangsx_id">@item.tenhang</option>}
                }
            </select>

            <label style="margin-left:15px;">Giá:</label>
            <select name="gia" style="margin-left:10px">
                <option value="">--chọn--</option>
                @if (ViewBag.gia == "1")
                {
                    <option value="1" selected>Dưới 10,000,000đ</option>}
                else
                {
                    <option value="1">Dưới 10,000,000đ</option>}
                @if (ViewBag.gia == "2")
                {
                    <option value="2" selected>10,000,000đ-20,000,000đ</option>}
                else
                {
                    <option value="2">10,000,000đ-20,000,000đ</option>}
                @if (ViewBag.gia == "3")
                {
                    <option value="3" selected>20,000,000đ-30,000,000đ</option>}
                else
                {
                    <option value="3">20,000,000đ-30,000,000đ</option>}
                @if (ViewBag.gia == "4")
                {
                    <option value="4" selected>30,000,000đ-40,000,000đ</option>}
                else
                {
                    <option value="4">30,000,000đ-40,000,000đ</option>}
                @if (ViewBag.gia == "5")
                {
                    <option value="5" selected>40,000,000đ-50,000,000đ</option>}
                else
                {
                    <option value="5">40,000,000đ-50,000,000đ</option>}
                @if (ViewBag.gia == "6")
                {
                    <option value="6" selected>50,000,000đ-60,000,000đ</option>}
                else
                {
                    <option value="6">50,000,000đ-60,000,000đ</option>}
                @if (ViewBag.gia == "7")
                {
                    <option value="7" selected>60,000,000đ-70,000,000đ</option>}
                else
                {
                    <option value="7">60,000,000đ-70,000,000đ</option>}
                @if (ViewBag.gia == "8")
                {
                    <option value="8" selected>70,000,000đ-80,000,000đ</option>}
                else
                {
                    <option value="8">70,000,000đ-80,000,000đ</option>}

            </select>

            <label style="margin-left:15px;">Màn hình: </label>
            <select name="manhinh" style="margin-left:15px">
                <option value="">--chọn--</option>
                @if (ViewBag.manhinh == "13.3inchs")
                {
                    <option value="13.3inchs" selected>13.3inchs</option> }
                else
                {
                    <option value="13.3inchs">13.3inchs</option>}
                @if (ViewBag.manhinh == "14inchs")
                {
                    <option value="14inchs" selected>14inchs</option>}
                else
                {
                    <option value="14inchs">14inchs</option>}
                @if (ViewBag.manhinh == "15.6inchs")
                {
                    <option value="15.6inchs" selected>15.6inchs</option>}
                else
                {
                    <option value="15.6inchs">15.6inchs</option>}
            </select><br />

        </div>

        <div style="margin-top:10px;margin-bottom:15px;width:680px;float:left">
            @{
                List<Discount> lstdiscount = db.Discounts.OrderBy(n => n.Discount_id).ToList();
            }
            <label>Khuyến mãi: </label>
            <select name="khuyenmai" style="margin-left:15px;width:91px;">
                <option value="">--chọn--</option>
                @foreach (var item in lstdiscount)
                {
                    if (ViewBag.khuyenmai == item.Discount_id.ToString())
                    {
                        <option value="@item.Discount_id" selected>@item.value%</option> }
                    else
                    {
                        <option value="@item.Discount_id">@item.value%</option>}
                }
            </select>

            <label style="margin-left:15px;">RAM: </label>
            <select name="RAM">
                <option value="">--chọn--</option>
                @if (ViewBag.RAM == "4Gb")
                {
                    <option value="4Gb" selected>4Gb</option>}
                else
                {
                    <option value="4Gb">4Gb</option>}
                @if (ViewBag.RAM == "8Gb")
                {
                    <option value="8Gb" selected>8Gb</option>}
                else
                {
                    <option value="8Gb">8Gb</option>}
                @if (ViewBag.RAM == "12Gb")
                {
                    <option value="12Gb" selected>12Gb</option>}
                else
                {
                    <option value="12Gb">12Gb</option>}
            </select>

            <label style="margin-left:140px;">Loại ổ cứng: </label>
            <select name="ocung" style="width:85px">
                <option value="">--chọn--</option>
                @if (ViewBag.ocung == "HDD")
                {
                    <option value="HDD" selected>HDD</option>}
                else
                {
                    <option value="HDD">HDD</option>}
                @if (ViewBag.ocung == "SSD")
                {
                    <option value="SSD" selected>SSD</option>}
                else
                {
                    <option value="SSD">SSD</option>}
            </select>
        </div>


        <input type="submit" name="name" value="Lọc" class="btn btn-default" />
    </form>
</div>

@if (Model.Count == 0)
{
    <hr />
    <p>@ViewBag.TimKiemLaptop</p>
}
else
{
    <hr />
    <p>@ViewBag.TimKiemLaptop</p>
    <table class="table">
        <tr style="background-color:#1f1c2030">

            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.First().Products_id)
            </th>
            <th style="text-align:center">Ảnh sản phẩm</th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.First().Name)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.First().GiaKM)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.First().Soluong)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.First().Discount_id)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.First().Hangsx_id)
            </th>
            <th style="text-align:center"></th>
        </tr>

        @{var x = 0; }
        @foreach (var item in Model)
        {
            string bg = "";
            if (x % 2 == 0) { bg = "#363232"; }
            else
            {
                bg = "#1f1c2030";
            }
            <tr style="background-color:@bg">

                <td style="text-align:center;padding-top:35px;font-size:15px">
                    @Html.DisplayFor(modelItem => item.Products_id)
                    @{
                        Html.DisplayFor(modelItem => item.Products_id);
                        var id = item.Products_id;
                    }
                </td>
                <td style="text-align:center">
                    <img src="~/Content/Images/i3/@id/trc.png" alt="Alternate Text" style="width:100px; height:80px" />
                </td>
                <td style="text-align:center;padding-top:35px;font-size:15px">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="text-align:center;padding-top:35px;font-size:15px">

                    @string.Format("{0:0,0đ}", item.GiaKM)
                </td>
                <td style="text-align:center;padding-top:35px;font-size:15px">
                    @Html.DisplayFor(modelItem => item.Soluong)
                </td>
                <td style="text-align:center;padding-top:35px;font-size:15px">
                    @{
                        Discount discount = db.Discounts.SingleOrDefault(n => n.Discount_id == item.Discount_id);
                    }
                    @Html.DisplayFor(modelItem => discount.value)%
                </td>
                <td style="text-align:center;padding-top:35px;font-size:15px">
                    @{
                        Hangsx hangsx = db.Hangsxes.SingleOrDefault(n => n.Hangsx_id == item.Hangsx_id);
                    }
                    @Html.DisplayFor(modelItem => hangsx.tenhang)
                </td>
                <td style="text-align:center;padding-top:35px;font-size:15px">
                    @Html.ActionLink("Chỉnh Sửa", "ChinhSuaLaptop", new { @id = item.Products_id }) |
                    @Html.ActionLink("Hiển Thị", "HienThiLaptop", new { @id = item.Products_id }) |
                    @Html.ActionLink("Xóa", "XoaLaptop", new { @id = item.Products_id })
                </td>
            </tr>
            x += 1;
        }

    </table>

    @*Tạo link liên kết các trang*@
    <div style="text-align:center; margin-top:20px">
        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
        <div class="Menutrang" style="margin-left:530px">
            @Html.PagedListPager(Model, page => Url.Action("TimKiemLaptop", "QuanLySanPham", new { @TuKhoaLaptop = ViewBag.TuKhoaLaptop, @hangsx = ViewBag.hangsx, @gia = ViewBag.gia, @manhinh = ViewBag.manhinh, @khuyenmai = ViewBag.khuyenmai, @RAM = ViewBag.RAM, @ocung = ViewBag.ocung, @page = page }))
        </div>
    </div>
}
<style>
    .Menutrang li {
        padding-left: 8px;
        display: inline;
    }
</style>
