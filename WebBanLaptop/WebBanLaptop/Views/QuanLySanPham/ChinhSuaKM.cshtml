@model WebBanLaptop.Models.Discount

@{
    ViewBag.Title = "ChinhSuaKM";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<h2 style="font-size:35px; margin-bottom:40px;margin-left:350px;padding-top:20px;color:aqua">Chỉnh sửa khuyến mại</h2>
    <div class="form-horizontal">
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Discount_id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-sm-10">
                <input style="background-color:#241818" type="text" class="form-control" id="input-Discount_id" placeholder="Mã khuyến mại" value="@Model.Discount_id" name="Discount_id" required readonly>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.value, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-sm-10">
                <input  type="text" class="form-control" id="input-value" placeholder="Giá trị" value="@Model.value" name="value" required>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
                <a href="@Url.Action("ListKM", "QuanLySanPham")"><input type="button" name="trolai" value="Trở lại danh sách" class="btn btn-default" /></a>
            </div>
        </div>
    </div>
}

