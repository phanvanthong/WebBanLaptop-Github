@model WebBanLaptop.Models.Discount

@{
    ViewBag.Title = "XoaKM";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div>
    <h4>Bạn có muốn xáo khuyến mại này?</h4>
    <hr />
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Discount_id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-sm-10">
                <input style="background-color:#241818" type="text" class="form-control" id="input-Discount_id" placeholder="Mã khuyến mại" value="@Model.Discount_id" name="Discount_id" required readonly>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.value, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-sm-10">
                <input type="text" class="form-control" id="input-value" placeholder="Giá trị" value="@Model.value" name="value" required>
            </div>
        </div>

        
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin-left:15px">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở về danh sách", "ListKM")
        </div>
    }
</div>
