                                        }
                                        else
                                        {
                                            <a class="btn btn-primary MuaNgayChiTiet" id="MuaNgay_@Model.Products_id" data-laptopid="@Model.Products_id" title="Mua ngay">Mua ngay</a>
                                        }   

