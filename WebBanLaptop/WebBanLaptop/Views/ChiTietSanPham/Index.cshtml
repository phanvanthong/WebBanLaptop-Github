@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="content col-sm-12">
            <div class="row">
                <div class="col-sm-5">
                    <div class="thumbnails">
                        <div><a class="thumbnail fancybox"  title="Casual Shirt With Ruffle Hem"><img style="width:475px;height:380px" id="imgChinh" src="~/Content/Images/i3/@Model.Products_id/trc.png" title="@Model.Name" alt="iPod Classic" /></a></div>
