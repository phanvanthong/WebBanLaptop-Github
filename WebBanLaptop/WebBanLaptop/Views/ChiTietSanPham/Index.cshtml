                    <h1 class="productpage-title">@Model.Name</h1>

                    <ul class="list-unstyled productinfo-details-top">
                        <li>
                            <h2 class="productpage-price">@string.Format("{0:0,0đ}", @Model.Gia)</h2>
                        </li>
                    </ul>
                    <hr>
                    <ul class="list-unstyled product_info">
                        <li>
                            <label>Nhà sản xuất:</label>
                            <span> @ViewBag.Hangsx</span>
                        </li>
                        <li>
                            <label>Mã sản phẩm:</label>
                            <span>@Model.Products_id</span>
                        </li>
                        <li>
                            <label>Tình trạng:</label>
                            @{ int a = 0;}
                            @{

                                if (Model.Soluong > 0)
                                {
                                    <span style="color:red;font-weight:bold;font-size:18px"> Còn hàng</span>
                                    a = 0;
                                }
                                else
                                {
                                    <span style="color:red;font-weight:bold;font-size:18px;text-decoration:underline"> Hết hàng</span>
                                    a = 1;
                                }
                            }

                        </li>
                    </ul>
