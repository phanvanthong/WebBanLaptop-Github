                                        <td style="width:400px">@Model.ManhHinh</td>
                                    </tr>
                                    <tr>
                                        <th style="width:150px">Card màn hình :</th>
                                        <td style="width:400px">@Model.CardDohoa</td>
                                    </tr>
                                    <tr>
