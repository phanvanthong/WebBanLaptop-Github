                        <div class="form-group">
                            <div class="qty">
                                <label>Số lượng</label>
                                <input id="qty" placeholder="1" type="number" name="iSoLuong" value="1" data-iSoLuong="iSoLuong">
                                <div class="pull-right">
                                    @{
                                        if (a == 1)
                                        {
                                            <a class="btn btn-primary Add-CartChiTiet" id="Add-Cart_@Model.Products_id" data-laptopid="@Model.Products_id"  disabled style="background-color:#ffc527;color:wheat" title="Thêm vào giỏ hàng">Thêm vào giỏ hàng</a>
                                        }
                                        else
                                        {
