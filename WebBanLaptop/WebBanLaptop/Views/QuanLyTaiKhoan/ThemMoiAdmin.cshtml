    function KtraAgree() {
        var Agree = document.getElementById('agree');
        if (Agree.checked == true) return true;
        else {
            @{
                ViewBag.DangKy = "Bạn chưa đồng ý điều khoản!";
            }
            return false
        }
    }
    function pwdconfirm() {
        var pwd = document.forms["FormDky", "pwd"].value;
        var pwdconfirm = document.forms["FormDky", "pwdconfirm"].value;

        if (pwd != pwdconfirm) {
            document.getElementById('pwdconfirm1').innerHTML = "Xác nhận lại mật khẩu!";
            return false
        }
        return true;
    }

</script>
