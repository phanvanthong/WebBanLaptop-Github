@model WebBanLaptop.Models.Admin

@{
    ViewBag.Title = "ChinhSuaAdmin";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@*<h2>Chỉnh sửa Admin</h2>*@

<div class="container" style="margin-left:150px">
    <div>
        <h3 style="font-size:35px; margin-bottom:40px;margin-left:80px;color:aqua">Chỉnh sửa thông tin admin</h3>

        <div class="col-sm-9" id="content">
            @*<p>If you already have an account with us, please login at the <a href="login.html">login page</a>.</p>*@
            <form class="form-horizontal" enctype="multipart/form-data" method="post" action="ChinhSuaAdmin" name="FormChinhSua" >
                <fieldset id="account">

                    <div class="form-group required">
                        <label style="white-space:nowrap;text-align:left" for="input-firstname" class="col-sm-2 control-label pull-left">Admin_ID</label>
                        <div class="col-sm-10">
                            <input style="background-color:#241818" type="text" class="form-control" id="input-admin_id" placeholder="Admin_ID" value="@Model.admin_id" name="admin_id" required readonly>
                        </div>
                    </div>
                    <div class="form-group required">
                        <label style="white-space:nowrap;text-align:left" for="input-firstname" class="col-sm-2 control-label pull-left">Tên đăng nhập</label>
                        <div class="col-sm-10">
                            <input style="background-color:#241818" type="text" class="form-control" id="input-username" placeholder="Tên đăng nhập" value="@Model.username" name="username" required readonly>
                        </div>
                    </div>
                    <div class="form-group required">
                        <label style="white-space:nowrap;text-align:left" for="input-telephone" class="col-sm-2 control-label pull-left">Full name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="input-fullname" placeholder="Fullname" value="@Model.fullname" name="fullname" required>
                        </div>
                    </div>
                    <div class="form-group required">
                        <label style="white-space:nowrap;text-align:left" for="input-password" class="col-sm-2 control-label pull-left">Email</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="input-email" placeholder="Email" value="@Model.email" name="email" required>
                        </div>
                    </div>
                    <div class="form-group required">
                        <label style="white-space:nowrap;text-align:left" for="input-confirm" class="col-sm-2 control-label pull-left">Địa chỉ</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="input-address" placeholder="Địa chỉ" value="@Model.address" name="address">
                        </div>
                    </div>

                    <div class="form-group required">
                        <label style="white-space:nowrap;text-align:left" for="input-email" class="col-sm-2 control-label pull-left">Số điện thoại</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="input-phone" placeholder="Số điện thoại" value="@Model.phone" name="phone">
                        </div>
                    </div>

                    <div class="form-group required">
                        <label style="white-space:nowrap;text-align:left" for="input-email" class="col-sm-2 control-label pull-left">Level</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="input-level_" placeholder="E-Mail" value="@Model.level_" name="level_" required>
                        </div>
                    </div>


                </fieldset>
                <div class="buttons">

                    <div class="pull-left" style="margin-left:10px">
                        <input type="submit" class="btn btn-primary" value="Lưu">
                    </div>
                    <div class="pull-left" style="margin-left: 10px">
                        <a href="@Url.Action("LstAdmin","QuanLyTaiKhoan")"><input type="button" class="btn btn-primary" value="Trở về danh sách"></a>
                    </div>
                </div>
            </form>
            @*<input type="submit" class="btn btn-primary" value="Tạo" disabled>*@
            
        </div>

    </div>

</div>

