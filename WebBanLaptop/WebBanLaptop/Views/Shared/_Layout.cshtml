                                            {
                                                <a style="padding-left:170px" href="@Url.Action("DangKy", "Users")" class="DKDN" title="Đăng ký">Đăng Ký</a><a href="@Url.Action("DangXuat", "Users")" title="Đăng nhập">Đăng Nhập</a>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("Thongtincanhan", "Users")" title="Đăng nhập">Thông tin cá nhân</a><a href="@Url.Action("DangXuat", "Users")" title="Đăng xuất">Đăng Xuất (@user.username) </a>
                                            }
                                        }
                                    </div>
                                </div>
                            }
                            @*</form>*@
                        </div>

                    </div>
                </div>
            </div>
