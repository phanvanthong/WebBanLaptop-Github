                                            @{Html.RenderAction("PartialKM", "Home");}
                                        </ul>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Index","Blog")" class="parent" id="Blog-id">Blog</a>
                                    </li>
                                    <li>
                                        <a class="active parent" id="Diadiem-id">Địa điểm</a>
                                        <ul>
                                            <li><a href="@Url.Action("Index","Home")">Bắc Ninh</a></li>
                                            <li><a href="@Url.Action("Index","Home")">Hà Nội</a></li>
                                            <li><a href="@Url.Action("Index","Home")">Hồ Chí Minh</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                    <div id="cart" class="btn-group btn-block">
                        @*<button type="button" class="btn btn-inverse btn-block btn-lg dropdown-toggle cart-dropdown-button">
                                <div id="cart-total">
                                    <a href="#"><img src="~/Content/Images/icon-thiet-ke-website-ban-do-noi-that.png" style="width:50px; height:auto" /></a>
                                    <span>Giỏ hàng</span><br>
                                </div>
                            </button>*@
