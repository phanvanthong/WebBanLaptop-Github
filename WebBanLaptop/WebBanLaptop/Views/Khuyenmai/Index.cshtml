
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

}
@using PagedList.Mvc;
@using PagedList;
@model PagedList.PagedList<WebBanLaptop.Models.Product>





<div class="container">
    <div class="mainbanner">
        <div id="main-banner" class="owl-carousel home-slider">
            @* <div class="item"> <a href="#"><img src="~/Content/Images/Main-Banner1.jpg" alt="main-banner1" class="img-banner" /></a> </div>*@

        </div>
    </div>


    <div class="row content">


        @foreach (var item in Model)
        {
            <div class="product-layout  product-grid  col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="item">
                    <div class="product-thumb">
                        <div class="image product-imageblock">
                            <a href="@Url.Action("index", "ChiTietSanpham", new { @id = item.Products_id })"> <img src="~/Content/Images/i3/@item.Products_id/trc.png" alt="iPod Classic" title="iPod Classic" class="img-responsive" /> <img src="~/Content/Images/i3/@item.Products_id/cheo.jpg" alt="iPod Classic" title="@item.Name" class="img-responsive" /> </a>
                            <ul class="button-group">
                                <li>
                                    <div class="pull-left">
                                        <a class="btn btn-primary" href="@Url.Action("Index","GioHang")" title="Tiếp tục mua sắm">Mua ngay</a>
                                    </div>
                                </li>
                                <li>
                                    <div class="pull-right">
                                        <a class="btn btn-primary" href="@Url.Action("ThemGioHang","GioHang", new { @iMaSP = item.Products_id, @strURl = Request.Url.ToString() })" title="Tiếp tục mua sắm"><i class="fa fa-cart-plus"></i></a>
                                    </div>
                                </li>

                            </ul>
                        </div>
                        <div class="caption product-detail">

                            <h4 class="product-name"><a href="#" title="Casual Shirt With Ruffle Hem"><span style="color:#000;font-size:15px">@item.Name</span></a></h4>
                            @{
                                if (item.Discount.value == 0)
                                {
                                    <p class="price product-price" style="font-size:18px;color:red">@string.Format("{0:0,0}", item.Gia)đ </p>
                                }
                                else
                                {
                                    <p class="price product-price" style="color:red;font-size:18px"><span style="font-size:10px;color:#000"><strike>@string.Format("{0:0,0}", item.Gia)đ</strike></span>   <br />@string.Format("{0:0,0}", item.Gia * (1 - item.Discount.value / 100))đ</p>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        }


        @*Tạo link liên kết các trang*@
        @*<br />Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount*@
        <div style=" text-align:center">
            <div class="Menutrang" style="margin-left:50px;">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { @page = page }))
            </div>
        </div>
        @*<style>
                .Menutrang li {
                    padding-left: 8px;
                    display: inline;
                }
            </style>*@
    </div>
</div>


<script>
    const a = document.querySelector('#Khuyenmai-id');
    a.style.color = '#ffc527';
</script>
