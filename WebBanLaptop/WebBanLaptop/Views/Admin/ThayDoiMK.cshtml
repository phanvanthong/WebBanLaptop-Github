
@{
    ViewBag.Title = "ThayDoiMK";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using WebBanLaptop.Models


<div class="container">
    <div class="row" style="margin-left:200px">


        <div class="col-sm-9" id="content">
            @{ 
                Admin ad = Session["Admin"] as Admin;
            }
            <form class="form-horizontal" enctype="multipart/form-data" method="post" action="ThayDoiMK" name="FormDky" onsubmit="return pwdconfirm()">
            @*@using (Html.BeginForm(new { @class = "form-horizontal", @enctype = "multipart/form-data", method = "post", @action = "ResetPwd", @name = "FormDky" }))*@
        
            <fieldset id="account">
                <legend style="font-size:50px; margin-bottom:40px;margin-left:10px;padding-top:20px;color:aqua">Đổi mật khẩu Admin</legend>

                <div class="form-group required">
                    <label style="white-space:nowrap" for="input-firstname" class="col-sm-2 control-label">Tên đăng nhập</label>
                    <div class="col-sm-10">
                        <input style="background-color:#241818" type="text" class="form-control" id="input-firstname" placeholder="Tên đăng nhập" value="@ad.username" name="username" readonly required>
                    </div>
                </div>

                <div class="form-group required">
                    <label style="white-space:nowrap" for="input-password" class="col-sm-2 control-label">Mật khẩu cũ</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="input-password" placeholder="Mật khẩu" value="" name="pwd" required>
                    </div>
                </div>

                <div class="form-group required">
                    <label style="white-space:nowrap" for="input-password" class="col-sm-2 control-label">Mật khẩu mới</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="input-password" placeholder="Mật khẩu" value="" name="pwdnew" required>
                    </div>
                </div>
                <div class="form-group required">
                    <label style="white-space:nowrap" for="input-password" class="col-sm-2 control-label">Xác nhận mật khẩu</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="input-password" placeholder="Xác nhận mật khẩu" value="" name="pwdconfirm" required>
                    </div>
                </div>

            </fieldset>
            <p style="color:red;margin-left:15px;">@ViewBag.thaydoimk</p>
            <div class="buttons">
                <div class="pull-right">
                    <input style="margin-right:70px" type="submit" class="btn btn-primary" value="Cập nhật">
                    <a style="margin-right:230px;" href="@Url.Action("Thongtincanhan","Admin")" ><input type="button" class="btn btn-primary" value="Quay Lại"></a>
                    
                </div>
            </div>
            
            </form>

        </div>

    </div>

</div>

